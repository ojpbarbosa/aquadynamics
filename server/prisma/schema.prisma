generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Aquarium {
  id           String   @id
  name         String   @unique
  registeredAt DateTime @default(now())

  controller Controller?
  Log        Log[]

  @@map("aquariums")
}

model Controller {
  id           String   @id
  address      String
  aquariumId   String   @unique
  status       String
  registeredAt DateTime
  updatedAt    DateTime @updatedAt

  logs     Log[]
  aquarium Aquarium @relation(fields: [aquariumId], references: [id])

  @@map("controllers")
}

model Log {
  id           String   @id
  aquariumId   String
  controllerId String
  temperature  Float
  ph           Float
  lightning    Boolean
  timestamp    DateTime @default(now())

  aquarium   Aquarium   @relation(fields: [aquariumId], references: [id])
  controller Controller @relation(fields: [controllerId], references: [id])

  @@index([aquariumId])
  @@index([controllerId])
  @@map("logs")
}
